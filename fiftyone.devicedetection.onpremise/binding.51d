            "<!(node -e \"\
            var v8Version = process.versions.v8;\
            var string = '-DSWIG_V8_VERSION=0x';\
            var arr = v8Version.split('.');\
            for (var i = 0; i < 3; i++) {\
                if (arr[i].length === 1) {\
                    string += '0';\
                    }\
                string += arr[i];\
            }\
            console.log(string);\")",
            "-Wall",
            "-Werror"
        ],
        'linux_mac_c_core_additional_flags': [
            "-Wno-unused-variable",
            "-Wno-unused-result",
            "-Wno-strict-aliasing",
